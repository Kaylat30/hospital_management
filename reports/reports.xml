<odoo>
    <template id="report_hospital_patient">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <h2>Patient Report: <span t-field="doc.name"/></h2>
                    <p><strong>Age:</strong> <span t-field="doc.age"/></p>
                    <p><strong>Gender:</strong> <span t-field="doc.gender"/></p>
                    <p><strong>Disease:</strong> <span t-field="doc.disease"/></p>
                    <p><strong>Doctor:</strong> <span t-field="doc.doctor_id.name"/></p>
                    <p><strong>Discharged:</strong> <span t-field="doc.is_discharged"/></p>
                    <p><strong>Notes:</strong></p>
                    <div t-field="doc.notes"/>
                </div>
            </t>
        </t>
    </template>

    <report
        id="action_report_hospital_patient"
        model="hospital.patient"
        string="Patient Report"
        report_type="qweb-pdf"
        file="hospital_management.report_hospital_patient"
        name="hospital_management.report_hospital_patient"
        print_report_name="'Patient Report - %s' % (object.name)"
    />
</odoo>

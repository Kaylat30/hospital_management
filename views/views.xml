<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_hospital_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="gender"/>
                        <field name="disease"/>
                        <field name="notes"/>
                        <field name="is_discharged"/>
                        <field name="attachment"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_hospital_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="disease"/>
                <field name="is_discharged"/>
            </tree>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_hospital_patient_kanban" model="ir.ui.view">
        <field name="name">hospital.patient.kanban</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong>
                                <ul>
                                    <li>Age: <field name="age"/></li>
                                    <li>Gender: <field name="gender"/></li>
                                    <li>Disease: <field name="disease"/></li>
                                    <li>Discharged: <field name="is_discharged"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_hospital_patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="disease"/>
                <filter name="discharged" string="Discharged" domain="[('is_discharged', '=', True)]"/>
                <filter name="not_discharged" string="Not Discharged" domain="[('is_discharged', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_gender" string="Gender" context="{'group_by': 'gender'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="search_view_id" ref="view_hospital_patient_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first patient!
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_hospital_root"
              name="Hospital Management"
              web_icon="hospital_managemet,static/description/icon.png"
              sequence="10"/>

    <menuitem id="menu_hospital_operations"
              name="Operations"
              parent="menu_hospital_root"
              sequence="10"/>

    <menuitem id="menu_hospital_patient"
              name="Patients"
              parent="menu_hospital_operations"
              action="action_hospital_patient"
              sequence="10"/>

</odoo>